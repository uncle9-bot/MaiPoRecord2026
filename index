        .cat-Medicine { background: var(--medicine-color); }
        .cat-Contribution { background: var(--contri-color); }

        /* 統計區 */
        .summary-container { margin-top: 20px; display: grid; grid-template-columns: 1fr; gap: 10px; }
        .summary-card { padding: 12px; border-radius: 8px; font-size: 14px; }
        .blue-card { background: #00ffff; border: 1px solid #00cccc; }
        .grey-card { background: #d9d9d9; border: 1px solid #bbb; }
    </style>
